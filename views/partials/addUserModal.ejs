<!-- Logout Modal-->
<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Seguridad / Catalogos / Usuarios</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <form class="user">
                <div class="form-group">
                    <input type="text" class="form-control form-control-user" id="nombres" placeholder="Nombre completo">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control form-control-user" id="email" placeholder="Correo Electronico">
                </div>
                <div class="form-floating">
                    <select class="custom-select custom-select-lg mb-3">
                        <option selected>Seleccione un valor de la lista</option>
                        <option value=1>Administrador</option>
                        <option value=2>Usuario</option>
                      </select>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user" id="pass" placeholder="Contraseña">
                </div>
                <a href="login.html" class="btn btn-primary btn-user btn-block">
                    Agregar Usuario
                </a>
            </form>
        </div>
    </div>
</div>
</div>